		<dependency org="google" name="guava" rev="11.0.1" conf="compile" />

		<!-- hadoop files system & rpc -->
		<dependency org="org.apache.hadoop" name="hadoop" rev="0.20.2-core" conf="compile" />
		<dependency org="jets3t" name="jets3t" rev="0.6.1" conf="compile" /> <!-- s3 fs-->
		<dependency org="org.apache.commons" name="commons-httpclient" rev="3.0.1" conf="compile" /> <!-- s3 fs-->
